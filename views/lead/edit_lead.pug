doctype html
html(lang='eng')
	include ../common/head
	+head("Lead Edit")
	body
		header
			include ../common/navbar
			+navbar()
			.container
				.row.align-items-center
					.col-md-6.order-md-1.text-center.text-md-left.pr-md-5
						h1 Edit Lead
						form(action="/lead/" + lead.id + "/edit", Method="POST").input-group.mb-3
							input(name="lead_email" type="email", placeholder="Enter your email address" value=lead.email).form-control.input-group-append
							button(type="submit").btn.btn-success Save
	include ../common/footer
	+footer()
	script(src='/javascripts/leads.js')
