mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Golden Goose").navabar-brand.mr-0.mr-md-2
            img(src="/images/golden-goose.svg", width="36", height="36")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/leads") Leads
        .navbar-right
            if user
                ul.navbar-nav.mr-auto
                    span.navbar-text Hello #{user.email}!
                    |
                    li.nav-item
                        a.nav-link(href="/logout") Logout
            else
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href="/signup") Signup
                    li.nav-item
                        a.nav-link(href="/login") Login
